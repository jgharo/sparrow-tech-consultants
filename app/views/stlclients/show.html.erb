<%= stylesheet_link_tag  "stlclients", :media => "all" %>

<p class="alert alert-info alert-dismissible fade show"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</p>

<nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-top: 0 !important; padding-bottom:0 !important;">
  <%= image_tag("logo/SparrowLogo.png", width: "100", height: "150", class: "navbar-brand d-inline-block align-top", :alt => "Sparrow Tech Logo")%>
  <% if user_signed_in? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to "Home", '/home', method: :get%></li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><p>Hi, <%= current_user.username %></p></li>
      <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% end %>
</nav>

<h4 class="pt-2 text-center" style="font-family: Georgia, 'Times New Roman', Times, serif;"><strong>Client</h4></strong>

<div class="container border border-info">
  <p>
    <strong>First Name:</strong>
    <%= sanitize @stlclient.client_fname.html_safe %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= sanitize @stlclient.client_lname.html_safe %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= sanitize @stlclient.client_email.html_safe %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= sanitize @stlclient.client_phonenumber.html_safe %>
  </p>

  <p>
    <strong>Company Name:</strong>
    <%= sanitize @stlclient.client_companyname.html_safe %>
  </p>

  <p>
    <strong>Shipping Address:</strong>
    <%= sanitize @stlclient.client_shippingaddress.html_safe %>
  </p>

  <p>
    <strong>Billing Address:</strong>
    <%= sanitize @stlclient.client_billingaddress.html_safe %>
  </p>

  <p>
    <strong>Employee:</strong>
    <%= sanitize @stlclient.employee.employee_fname.html_safe %>
  </p>
</div>

<div class="pt-3">
  <button type="button" class="btn btn-secondary ml-5 mr-2"><%= link_to 'Edit', edit_stlclient_path(@stlclient), :class=>"text-light" %></button>
  <button type="button" class="btn btn-secondary"><%= link_to 'Back', stlclients_path, :class=>"text-light" %></button>
</div>
