<%= stylesheet_link_tag  "employees", :media => "all" %>
<p class="alert alert-info alert-dismissible fade show"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</p>

<nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-top: 0 !important; padding-bottom:0 !important;">
  <%= image_tag("logo/SparrowLogo.png", width: "75", height: "100", class: "navbar-brand d-inline-block align-top", :alt => "Sparrow Tech Logo")%>
  <% if user_signed_in? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to "Home", '/home', method: :get%></li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><p>Hi, <%= current_user.username %></p></li>
      <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% end %>
</nav>

<h4 class="pt-2 text-center" style="font-family: Georgia, 'Times New Roman', Times, serif;"><strong>Chemical</h4></strong>

<div class="container border border-info">
  <p>
    <strong>Product name:</strong>
    <%= sanitize @chemical.product_name.html_safe %>
  </p>

  <p>
    <strong>Product description:</strong>
    <%= sanitize @chemical.product_description.html_safe %>
  </p>

  <p>
    <strong>Product cost:</strong>
    <%= sanitize number_to_currency @chemical.product_cost %>
  </p>

  <p>
    <strong>Prodcategory:</strong>
    <%= sanitize @chemical.prodcategory.category.html_safe %>
  </p>

  <p>
    <strong>Prodstatus:</strong>
    <%= sanitize @chemical.prodstatus.status.html_safe %>
  </p>

  <p>
    <strong>Date modified:</strong>
    <%= sanitize @chemical.date_modified.strftime("%B %-d, %Y") %>
  </p>

  <p>
    <strong>Supplier:</strong>
    <%= sanitize @chemical.supplier.supplier_name.html_safe %>
  </p>
</div>

<div class="pt-3">
  <button type="button" class="btn btn-secondary ml-5 mr-2"><%= link_to 'Edit', edit_chemical_path(@chemical), :class=>"text-light" %></button>
  <button type="button" class="btn btn-secondary"><%= link_to 'Back', chemicals_path, :class=>"text-light" %></button>
</div>