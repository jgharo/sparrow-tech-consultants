  </div>

  <div class="field">
    <%= form.label :service_cost %>
    <%= form.text_field :service_cost %>
  </div>

  <div class="field">
    <%= form.label :servcategory_id %>
    <%= form.text_field :servcategory_id %>
  </div>

  <div class="field">
    <%= form.label :servstatus_id %>
    <%= form.text_field :servstatus_id %>
  </div>

  <div class="field">
    <%= form.label :date_modified %>
    <%= form.date_select :date_modified %>
  </div>

  <div class="field">
    <%= form.label :supporting_company_id %>
    <%= form.text_field :supporting_company_id %>
  </div>

