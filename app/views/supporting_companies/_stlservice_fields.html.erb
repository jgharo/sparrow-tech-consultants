<div class='nested-fields pt-2'>
    <div class="field">
        <%= f.label :service_name %>
        <%= f.text_field :service_name %>
    </div>

    <div class="field">
        <%= f.label :service_description %>
        <%= f.text_area :service_description %>
    </div>

    <div class="field">
        <%= f.label :service_cost %>
        <%= f.text_field :service_cost %>
    </div>

    <div class="field">
        <%= f.label :servcategory_id %>
        <%= f.collection_select :servcategory_id, Servcategory.all, :id, :category %>
    </div>

    <div class="field">
        <%= f.label :servstatus_id %>
        <%= f.collection_select :servstatus_id, Servstatus.all, :id, :status%>
    </div>
  
    <div class="field">
        <%= f.label :date_modified %>
        <%= f.date_select :date_modified %>
    </div>

    <%= link_to_remove_association "Remove Service", f%>
</div>