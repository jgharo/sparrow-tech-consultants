<p id="notice"><%= notice %></p>

<div class="subpage_header">
<h1>Supporting Companies</h1>
</div>

<table>
  <thead>
    <tr>
      <th><%= sortable "supportingcomp_name", "Name"%></th>
      <th><%= sortable "supportingcomp_email", "Email"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supporting_companies.each do |supporting_company| %>
      <tr>
        <td><%= supporting_company.supportingcomp_name %></td>
        <td><%= supporting_company.supportingcomp_email %></td>
        <td><%= link_to 'Details', supporting_company %></td>
        <td><%= link_to 'Edit', edit_supporting_company_path(supporting_company) %></td>
        <td><%= link_to 'Delete', supporting_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button id ="create_new_button">
<%= link_to 'New Supporting Company', new_supporting_company_path %>
</button>