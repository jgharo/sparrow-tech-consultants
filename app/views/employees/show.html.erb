<%= stylesheet_link_tag  "employees", :media => "all" %>
<p class="alert alert-info alert-dismissible fade show"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</p>

<nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-top: 0 !important; padding-bottom:0 !important;">
  <%= image_tag("logo/SparrowLogo.png", width: "100", height: "150", class: "navbar-brand d-inline-block align-top", :alt => "Sparrow Tech Logo")%>
  <% if user_signed_in? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to "Home", '/home', method: :get%></li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><p>Hi, <%= current_user.username %></p></li>
      <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% end %>
</nav>

<h4 class="pt-2 text-center" style="font-family: Georgia, 'Times New Roman', Times, serif;"><strong>Employee</h4></strong>

<div class="container border border-info">
  <p>
    <strong>First Name:</strong>
    <%= sanitize @employee.employee_fname.html_safe %>
  </p>

  <p>
   <strong>Last Name:</strong>
    <%= sanitize @employee.employee_lname.html_safe %>
  </p>

  <p>
    <strong>Email Address:</strong>
    <%= sanitize @employee.employee_email.html_safe %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= sanitize number_to_currency @employee.employee_salary %>
  </p>

  <p>
    <strong>Hire Date:</strong>
    <%= sanitize @employee.employee_hiredate.strftime("%B %-d, %Y") %>
  </p>
</div>

<div class="pt-3">
  <%= link_to 'Edit', edit_employee_path(@employee), :class=>"text-light btn btn-secondary ml-5 mr-2" %>
  <%= link_to 'Back', employees_path, :class=>"text-light btn btn-secondary mr-5" %>
</div>
