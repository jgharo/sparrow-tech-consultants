<%= stylesheet_link_tag  "employees", :media => "all" %>

<nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-top: 0 !important; padding-bottom:0 !important;">
  <%= image_tag("logo/SparrowLogo.png", width: "75", height: "100", class: "navbar-brand d-inline-block align-top", :alt => "Sparrow Tech Logo")%>
  <% if user_signed_in? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to "Home", '/home', method: :get%></li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><p>Hi, <%= current_user.username %></p></li>
      <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% end %>
</nav>

<h4 class="pt-2" style="font-family: Georgia, 'Times New Roman', Times, serif;"><strong>Editing Employees</h4></strong>
<div class="d-flex justify-content-center flex-column">
    <%= render 'form', employee: @employee %>
</div>

<div class="pt-3">
  <button type="button" class="btn btn-secondary ml-2 mr-2"><%= link_to 'Details', @employee, :class=>"text-light" %></button>
  <button type="button" class="btn btn-secondary"><%= link_to 'Back', employees_path, :class=>"text-light" %></button>
</div>
