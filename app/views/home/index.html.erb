<%= stylesheet_link_tag  "home", :media => "all" %>

<!-- Navbar -->
<nav class="navbar navbar-light" style="background-color: #e3f2fd; padding-top: 0 !important; padding-bottom:0 !important;">
  <%= image_tag("logo/SparrowLogo.png", width: "100", height: "150", class: "navbar-brand d-inline-block align-top", :alt => "Sparrow Tech Logo")%>
  <% if user_signed_in? %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><%= link_to "Home", '/home', method: :get%></li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><p>Hi, <%= current_user.username %></p></li>
      <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% end %>
</nav>

<h3 class="display-4 text-center"><strong>Sparrow Tech Logistics System</h3></strong>

<div class="d-flex justify-content-center">
  <div class="d-flex p-2 bd-highlight">
    <%= link_to "Invoices", '/invoice', method: :get, :class=>"btn btn-info text-light mr-2" %>
    <%= link_to "Transportations", '/transportation', method: :get, :class=>"btn btn-info text-light mr-2"%>
    <%= link_to "Chemicals", '/chemical', method: :get, :class=>"btn btn-info text-light mr-2" %>
    <%= link_to "Products", '/product', method: :get, :class=>"btn btn-info text-light mr-2"%>
    <button type="button" class="btn btn-outline-info mr-2"><%= link_to "Employees", '/employee', method: :get%></button>
    <button type="button" class="btn btn-outline-info mr-2"><%= link_to "Clients", '/stlclient', method: :get%></button>
    <button type="button" class="btn btn-outline-info mr-2"><%= link_to "Supporting Companies", '/supporting', method: :get%></button>
    <button type="button" class="btn btn-outline-info"><%= link_to "Suppliers", '/supplier', method: :get%></button>
  </div>
</div>

