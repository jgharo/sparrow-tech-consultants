<p id="notice"><%= notice %></p>

<div class="subpage_header">
<h1>Products</h1>
</div>

<table>
  <thead>
    <tr>
      <th><%= sortable "product_name", "Name"%></th>
      <th><%= sortable "product_description", "Description"%></th>
      <th><%= sortable "product_cost", "Cost"%></th>
      <th><%= sortable "product_category", "Category"%></th>
      <th><%= sortable "product_status", "Status"%></th>
      <th><%= sortable "date_modified", "Date Modified"%></th>
      <th><%= sortable "supplier_name", "Supplier"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= sanitize product.product_name.html_safe %></td>
        <td><%= sanitize product.product_description.html_safe %></td>
        <td><%= sanitize number_to_currency(product.product_cost) %></td>
        <td><%= sanitize product.prodcategory.category %></td>
        <td><%= sanitize product.prodstatus.status %></td>
        <td><%= sanitize product.date_modified.strftime("%B %-d, %Y") %></td>
        <td><%= sanitize product.supplier.supplier_name %></td>
        <td><%= link_to 'Details', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

