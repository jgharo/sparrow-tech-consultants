<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Product Description</th>
      <th>Product Cost</th>
      <th>Product Category</th>
      <th>Product Status</th>
      <th>Date modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_description %></td>
        <td><%= number_to_currency(product.product_cost) %></td>
        <td><%= product.prod_category.prod_category %></td>
        <td><%= product.prod_status.prod_status %></td>
        <td><%= product.date_modified %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

