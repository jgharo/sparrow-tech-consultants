<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :product_name, 'Name') %></th>
      <th>Description</th>
      <th><%= sort_link(@q, :product_cost, 'Cost') %></th>
      <th><%= sort_link(@q, :prod_category, Product.human_attribute_name(:prod_category), 'Category') %></th>
      <th><%= sort_link(@q, :prod_status, Product.human_attribute_name(:prod_status), 'Status') %></th>
      <th><%= sort_link(@q, :date_modified, 'Date modified') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_description %></td>
        <td><%= number_to_currency(product.product_cost) %></td>
        <td><%= product.prod_category.prod_category %></td>
        <td><%= product.prod_status.prod_status %></td>
        <td><%= product.date_modified %></td>
        <td><%= link_to 'Details', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

