<p id="notice"><%= notice %></p>

<div class="subpage_header">
<h1>Transportations</h1>
</div>

<table>
  <thead>
    <tr>
      <th><%= sortable "service_name", "Name"%></th>
      <th><%= sortable "service_description", "Description"%></th>
      <th><%= sortable "service_cost", "Cost/ Mile"%></th>
      <th><%= sortable "service_category", "Category"%></th>
      <th><%= sortable "service_status", "Status"%></th>
      <th><%= sortable "date_modified", "Date Modified"%></th>
      <th><%= sortable "supportingcomp_name", "Supporting Company"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stlservices.each do |stlservice| %>
      <tr>
        <td><%= stlservice.service_name %></td>
        <td><%= stlservice.service_description %></td>
        <td><%= number_to_currency stlservice.service_cost %></td>
        <td><%= stlservice.servcategory.category %></td>
        <td><%= stlservice.servstatus.status %></td>
        <td><%= stlservice.date_modified.strftime("%B %-d, %Y") %></td>
        <td><%= stlservice.supporting_company.supportingcomp_name %></td>
        <td><%= link_to 'Details', stlservice %></td>
        <td><%= link_to 'Edit', edit_stlservice_path(stlservice) %></td>
        <td><%= link_to 'Delete', stlservice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
