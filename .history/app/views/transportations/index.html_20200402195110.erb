<p id="notice"><%= notice %></p>

<h1>Transportations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cost/Mile</th>
      <th>Category</th>
      <th>Status</th>
      <th>Date Modified</th>
      <th>Supporting Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transportations.each do |transportation| %>
      <tr>
        <td><%= transportation.service_name %></td>
        <td><%= transportation.service_description %></td>
        <td><%= transportation.service_cost %></td>
        <td><%= transportation.servcategory_id %></td>
        <td><%= transportation.servstatus_id %></td>
        <td><%= transportation.date_modified %></td>
        <td><%= transportation.supporting_company_id %></td>
        <td><%= link_to 'Show', transportation %></td>
        <td><%= link_to 'Edit', edit_transportation_path(transportation) %></td>
        <td><%= link_to 'Destroy', transportation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

