<div class='nested-fields'>

    <div class="field">
        <%= f.label :payment_address %>
        <%= f.text_area :payment_address, :required => true %>
    </div>

    <div class="field">
        <%= f.label :account_name %>
        <%= f.text_field :account_name, pattern: "[0-9]{4}", :required => true%>
    </div>

    <div class="field">
        <%= f.label :account_number %>
        <%= f.number_field :account_number, :required => true %>
    </div>

    <div class="field">
        <%= f.label :routing_number %>
        <%= f.number_field :routing_number, :required => true %>
    </div>

    <%= link_to_remove_association "Remove Payment Information", f %>
</div>