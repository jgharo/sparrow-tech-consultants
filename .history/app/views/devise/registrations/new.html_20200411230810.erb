<%= stylesheet_link_tag    "registration", :media => "all" %>

<%= image_tag("logo/SparrowLogo.png", size: "250x350", class: "mx-auto d-block", :alt => "Sparrow Tech Logo")%>

<h4 class="text-center"><strong>Sparrow Tech Logistics System</h4></strong>
# remove asdf below
<%= asdfform_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container-sm border border-primary rounded">
    <div class= "d-flex align-items-center flex-column flex-wrap">
        <div class="field pt-3">
            <%= f.label :username, class: "label"  %><br />
            <%= f.text_field :username, autofocus: true, class: "input" %>
        </div>

        <div class="field pt-2">
            <%= f.label :email, class: "label"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field pt-2">
            <%= f.label :password, class: "label"  %>
            <% if @minimum_password_length %>
                <p class="font-italic">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field pt-2 pb-2">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions pt-2">
            <%= f.submit "Sign up", :class=>"btn btn-primary" %>
        </div>
        <%= render "devise/shared/links", :class=>"btn btn-info text-light pt-2" %>
    </div>
</div>
<% end %>