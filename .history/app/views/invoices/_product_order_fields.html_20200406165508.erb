<div class='nested-fields'>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, Product.all, :id, :product_name%>
  </div>

  <div class="field">
    <%= f.label :product_quantity %>
    <%= f.number_field :product_quantity %>
  </div>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, Product.all, :id, :product_cost%>
  </div>

  <div class="field">
    <%= f.label :product_cost_total %>
    <%= f.hidden_field :product_cost_total, value: @product_order.product_cost_total, :id "Total Cost" %>
  </div>


  <%= link_to_remove_association "Remove Product", f%>
</div>