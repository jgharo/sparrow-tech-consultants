<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Company Name</th>
      <th>Shipping Address</th>
      <th>Billing Address</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stlclients.each do |stlclient| %>
      <tr>
        <td><%= stlclient.client_fname %></td>
        <td><%= stlclient.client_lname %></td>
        <td><%= stlclient.client_email %></td>
        <td><%= stlclient.client_phonenumber %></td>
        <td><%= stlclient.client_companyname %></td>
        <td><%= stlclient.client_shippingaddress %></td>
        <td><%= stlclient.client_billingaddress %></td>
        <td><%= stlclient.employee_id %></td>
        <td><%= link_to 'Details', stlclient %></td>
        <td><%= link_to 'Edit', edit_stlclient_path(stlclient) %></td>
        <td><%= link_to 'Delete', stlclient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

