<p id="notice"><%= notice %></p>

<h1>Product Orders</h1>

<table>
  <thead>
    <tr>
      <th>Product quantity</th>
      <th>Product cost total</th>
      <th>Product</th>
      <th>Invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_orders.each do |product_order| %>
      <tr>
        <td><%= sanitize product_order.product_quantity.html_safe %></td>
        <td><%= sanitize product_order.product_cost_total.html_safe %></td>
        <td><%= sanitize product_order.product_id %></td>
        <td><%= sanitize product_order.invoice_id %></td>
        <td><%= link_to 'Show', product_order %></td>
        <td><%= link_to 'Edit', edit_product_order_path(product_order) %></td>
        <td><%= link_to 'Destroy', product_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

